<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgOrange"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/imgGreen"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toStartOf="@+id/imgPink"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

            <ImageView
                android:id="@+id/imgSky"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@+id/imgPurple"
                app:layout_constraintTop_toTopOf="@+id/imgPurple"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

            <ImageView
                android:id="@+id/imgPurple"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toStartOf="@+id/imgSky"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@+id/imgPink"
                app:layout_constraintTop_toTopOf="@+id/imgPink"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

            <ImageView
                android:id="@+id/imgGreen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toStartOf="@+id/imgGray"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgOrange"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

            <ImageView
                android:id="@+id/imgPink"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toStartOf="@+id/imgPurple"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@+id/imgOrange"
                app:layout_constraintTop_toTopOf="@+id/imgOrange"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

            <ImageView
                android:id="@+id/imgGray"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgGreen"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toStartOf="@+id/imgBrown"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@+id/imgGreen"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

            <ImageView
                android:id="@+id/imgBrown"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toStartOf="@+id/imgNavy"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@+id/imgGray"
                app:layout_constraintTop_toTopOf="@+id/imgGray"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

            <ImageView
                android:id="@+id/imgNavy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@+id/imgBrown"
                app:layout_constraintTop_toTopOf="@+id/imgBrown"
                app:layout_optimizationLevel="ratio"
                app:srcCompat="@drawable/clrcle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>